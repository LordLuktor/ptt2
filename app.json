{
  "expo": {
    "name": "PTT System",
    "slug": "ptt-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ptt",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.ptt.system",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "PTT System needs access to your location to track your position for supervisor and dispatcher monitoring.",
        "NSLocationWhenInUseUsageDescription": "PTT System needs access to your location to track your position.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "com.ptt.system",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "PTT System needs access to your location to track your position for supervisor and dispatcher monitoring."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
